<UserControl x:Class="Mv.Shell.Views.AppStore.AppStoreComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:controls="clr-namespace:Mv.Controls;assembly=MV.Controls"
             xmlns:appStore="clr-namespace:Mv.Shell.Views.AppStore">
             
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="3"  Style="{StaticResource FloatInRightToLeftStyle}" >
            <TabControl Margin="16" prism:RegionManager.RegionName="APPS">
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
