<TabItem x:Class="Mv.Modules.Schneider.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mv.Modules.Schneider.Views"
         xmlns:pm="http://prismlibrary.com/"
         pm:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
            Header="Schneider"
             d:DesignHeight="450" d:DesignWidth="800">
   
    <UniformGrid Columns="2" Margin="10">
        <TextBlock >Server IP:</TextBlock>
        <TextBox Grid.Column="1"  Text="{Binding ServerIP}" ></TextBox>
        <TextBlock>Station:</TextBlock>
        <TextBox Grid.Column="1" Text="{Binding Station}"></TextBox>
    </UniformGrid>
</TabItem>
