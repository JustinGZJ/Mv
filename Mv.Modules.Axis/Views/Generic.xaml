<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mw="clr-namespace:MotionWrapper"
                    xmlns:controls="clr-namespace:Mv.Ui.Converters;assembly=MV.UI"
                    xmlns:local="clr-namespace:Mv.Modules.Axis.Views" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <controls:BoolColorConverter x:Key="booltocolor"  FalseColor="Gray"  TrueColor="LimeGreen" Invert="False"/>
    <DataTemplate x:Key="cylinder" DataType="{x:Type mw:Cylinder }">
        <Grid Margin="10">
            <Grid Width="400" Height="100">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <UniformGrid Grid.Column="1"  Columns="1">
                        <Button     CommandParameter="{Binding}" Command="{Binding DataContext.CmdReverse,RelativeSource={RelativeSource AncestorType=local:Cylinders}}">

                            <Button.Style>
                                <Style TargetType="Button" >
                                    <Setter Property="Content" Value="{Binding Output[0].Prm.PinStr}"/>
                                    <Setter Property="Background" Value="Gray"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </UniformGrid>

                    <UniformGrid Columns="1" Rows="1" Grid.Column="0">
                        <Grid  >
                            <Rectangle Stroke="DarkCyan" StrokeThickness="1"  Fill="{Binding Output[0].Value,Converter={StaticResource booltocolor}}" />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Output[0].Name}"/>
                        </Grid>
                    </UniformGrid>


                    <UniformGrid Grid.Column="2" Columns="1" Rows="2">
                        <Grid>
                            <Rectangle Stroke="DarkCyan" StrokeThickness="1" Fill="{Binding Input[0].Value,Converter={StaticResource booltocolor}}"  />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Input[0].Name}"/>
                        </Grid>
                        <Grid>
                            <Rectangle Stroke="DarkCyan" StrokeThickness="1" Fill="{Binding Input[1].Value,Converter={StaticResource booltocolor}}" 
                     />
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Input[1].Name}"/>
                        </Grid>
                    </UniformGrid>
                </Grid>
            </Grid>
        </Grid>
    </DataTemplate>
