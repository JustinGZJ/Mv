<TabItem x:Class="Mv.Modules.P99.Views.P99Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mv.Modules.P99.Views"
             mc:Ignorable="d" 
            xmlns:prism="http://prismlibrary.com/"
            prism:ViewModelLocator.AutoWireViewModel="True"
            Header="P99"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MinHeight="300">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <DockPanel LastChildFill="True"  Margin="10">
                <TextBlock Margin="10">机台编号</TextBlock>
                <TextBox Margin="10" Text="{Binding Config.MachineNo}"></TextBox>
            </DockPanel>
            <DockPanel LastChildFill="True" Margin="10">
                <TextBlock Margin="10">保存路径</TextBlock>
                <TextBox Margin="10"  Text="{Binding Config.SaveDir}"></TextBox>
            </DockPanel>
        </StackPanel>
        <Button Grid.Row="1" Margin="20" Content="保存" Command="{Binding SaveCommand}" Style="{StaticResource MaterialDesignFlatMidBgButton}"/>
    </Grid>
</TabItem>
